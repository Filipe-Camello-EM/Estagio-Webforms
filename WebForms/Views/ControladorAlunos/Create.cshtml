@model Domain.Aluno
@{
    var teste = Model;
}

<link rel="stylesheet" href="../assets/css/theme.min.css">

@{
    ViewData["Title"] = "Criar";
}

<head>
    <script src="https://code.jquery.com/jquery-2.2.4.js" integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=" crossorigin="anonymous"></script>
</head>

<div class="card bg-light mb-3">
<div class = "container">
    <div class="card-header">
<h1>Criar</h1>
    </div>

    <div class="card=body">
<h4>Aluno</h4>
<hr />
<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>

</div>
<p></p>
<div class="row">
    <div class="form-row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-xl-6">
        <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" placeholder = "Insira a matrícula" 
                oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength = "9"/>
                <span asp-validation-for="Matricula" class="text-danger"></span>                
            </div>
    </div>
    <div class="col-xl-6">
        <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder = "Insira o nome"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-6">
            <div class="form-group">
                <label asp-for="CPF" class="control-label" id = "CPF" name = "CPF"></label>
                <input asp-for="CPF" class="form-control" id = "CPF" name = "CPF" placeholder = "Insira o CPF"/>                                
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
    </div>
    <div class="col-xl-6">
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
    </div>
</div>
    <div class="col-xl-4">
            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <select asp-for="Sexo" class="form-select">
                <option value = "Masculino">Masculino</option>
                <option value = "Feminino">Feminino</option>
                </select>
                <p></p>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
    </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <input type="reset" value="Resetar" class="btn btn-danger" />
            </div>
        </form>
        </div>
    </div>
</div>
<p></p>
</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
<script>
    $(document).ready(function ($) { 
        $("#CPF").mask('000.000.000-00', {reverse: true});
    });
</script>